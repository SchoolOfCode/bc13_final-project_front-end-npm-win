generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Groups {
  id           Int            @id @default(autoincrement())
  club_name    String         @unique
  days         String
  times        String
  image        String?
  image_alt    String   @default("alt image")
  tagline      String
  description  String
  location     String
  availability String
  email        String
  telephone    String
  events       Events[]
  user_circles User_circles[]
}

model Events {
  id         Int      @id @default(autoincrement())
  event_name String
  date       String
  time       String
  club_name  String
  location   String   @default("location")
  running    Boolean  @default(true)
  start_time DateTime 
  end_time   DateTime 
  groups     Groups   @relation(fields: [club_name], references: [club_name])
}

model Users {
  id             Int            @id @default(autoincrement())
  first_name     String
  surname        String
  email          String
  telephone      String
  role           String
  link_worker_id Int?
  feedback       Feedback[]
  user_circles   User_circles[]
}

model Feedback {
  id               Int      @id @default(autoincrement())
  user_id          Int
  event_name       String
  comment          String
  rating           Int
  user             Users    @relation(fields: [user_id], references: [id])
}

model User_circles {
  id        Int    @id @default(autoincrement())
  user_id   Int
  club_name String
  groups    Groups @relation(fields: [club_name], references: [club_name])
  user      Users  @relation(fields: [user_id], references: [id])
}
